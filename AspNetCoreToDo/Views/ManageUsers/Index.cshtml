@model ManageUsersViewModel

@{
    ViewBag.Title = "Manage Users";
}

<h2>@ViewBag.Title</h2>

<h3>Administrators</h3>

<table class="table">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var user in Model.Administrators)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
        </tr>
    }
</table>

<h3>Everyone</h3>

<table class="table">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var user in Model.Everyone)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                @if (user.UserName != User.Identity.Name)
                {
                    <a href="@Url.Action("DeleteUser", new { id = user.Id })">Delete</a>
                }
            </td>
        </tr>
    }